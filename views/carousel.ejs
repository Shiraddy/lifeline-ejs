<%- include('partials/header') %>

<div
  id="hero-carousel"
  class="carousel slide carousel-fade"
  data-bs-ride="carousel"
  data-bs-interval="3000"
>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div id="banner" class="banner">
        <%- include('partials/NavBar') %>
        <!-- HERO PAGE TEXT -->
        <div class="content row">
          <div class="col-lg-6 col-md-12 col-sm-12 text-start">
            <h1 class="hero-header fs-1">
              DO YOU NEED A <br />
              <span class="hero-home shadow-two text-success">HOME TUTOR?</span>
            </h1>
            <p class="hero-text lh-base my-1">
              Welcome to Lifeline. Here we connect you to a professional home
              tutor to help your ward excel. <br />
              <a
                class="btn btn-danger shadow-two px-lg-4 search-button me-3 my-2"
                href="/form"
                ><i class="fa-solid fa-magnifying-glass me-2"></i>GET A TUTOR</a
              >
            </p>
          </div>
          <div class="col-lg-6 col-md-5 col-sm-12"></div>
        </div>
      </div>
    </div>

    <div class="carousel-item">
      <div class="counsel-banner">
        <%- include('partials/NavBar') %>
        <div class="row">
          <div class="col-lg-6 text-white my-5 service-hero-text text-start">
            <h1 class="hero-header mt-lg-5 mt-5 mb-0">
              ARE YOU IN NEED OF
              <span class="text-primary shadow-two">GUIDANCE?</span>
            </h1>
            <p class="hero-text fs-5 mt-0">
              Here at Lifeline, We connect you to a professional <br />
              counsellor to assist you with your challenge.
              <br />
              <a
                class="btn btn-primary btn-lg shadow-two mx my-3"
                id="bookBtn"
                href="#"
                >BOOK A SESSION</a
              >
            </p>
          </div>
          <div class="col-lg-6"></div>
        </div>
      </div>
    </div>

    <div class="carousel-item">
      <div class="consult-banner">
        <%- include('partials/NavBar') %>
        <div class="row">
          <div class="col-lg-6 text-white my-5 service-hero-text text-start">
            <h1 class="hero-header mt-lg-5 mt-5 mb-0">
              DO YOU WANT TO GROW YOUR
              <span class="text-success shadow-two">SCHOOL?</span>
            </h1>
            <p class="hero-text fs-5 mt-0">
              Here at Lifeline, We help schools build a unique brand, become
              effective, and deliver value to parents.
              <br />
              <a
                class="btn btn-success btn-lg shadow-two mx my-3"
                id="bookBtn"
                href="#"
                >LET'S START TALKING..</a
              >
            </p>
          </div>
          <div class="col-lg-6"></div>
        </div>
      </div>
    </div>
  </div>
